apiVersion: v1
kind: Service
metadata:
  labels:
    app: pihole
  name: pihole1
  namespace: pihole
spec:
  ports:
  - name: dns
    port: 53
    protocol: TCP
    targetPort: 53
  - name: dns-udp
    port: 53
    protocol: UDP
    targetPort: 53
  - name: client-udp
    port: 67
    protocol: UDP
    targetPort: 67 
  selector:
    app: pihole
  loadBalancerIP: 192.168.1.160
  externalTrafficPolicy: Local
  type: LoadBalancer
